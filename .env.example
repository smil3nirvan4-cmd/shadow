# ===========================================
# JARVIS ULTIMATE - Environment Configuration
# ===========================================

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# WhatsApp
AUTHORIZED_NUMBERS=5511999999999@c.us,5511888888888@c.us
WA_SESSION_PATH=./.wwebjs_auth

# AI Provider (Gemini - Primary)
GOOGLE_API_KEY=your_google_api_key_here
AI_MODEL=gemini-2.0-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=8192

# AI Provider (Grok - xAI) - Optional
GROK_API_KEY=your_xai_grok_api_key_here
GROK_MODEL=grok-4
GROK_BASE_URL=https://api.x.ai/v1

# AI Provider (OpenAI) - Optional
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview

# AI Provider (Anthropic) - Optional
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Storage
STORAGE_TYPE=sqlite
STORAGE_PATH=./data
SQLITE_FILENAME=brain.db

# Analytics
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_MAX_LOGS=1000
ANOMALY_THRESHOLD=0.8

# Forensics
ENABLE_CALL_INTERCEPTION=true
ENABLE_PRESENCE_TRACKING=true
ENABLE_ACK_TRACKING=true
ENABLE_DEVICE_FINGERPRINTING=true

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=http://localhost:3000

# Optional: Puppeteer
PUPPETEER_HEADLESS=true
PUPPETEER_EXECUTABLE_PATH=
